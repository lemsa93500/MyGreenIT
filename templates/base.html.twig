<!DOCTYPE html>
<html lang="fr">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <title>{% block title %}MyGreenIT{% endblock %}</title>
  <link rel="icon" href="{{ asset('favicon.ico') }}">

  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
  <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.css" rel="stylesheet">
  <link rel="stylesheet" href="{{ asset('app.css') }}">
  {% block stylesheets %}{% endblock %}
</head>
<body>
  <nav class="navbar navbar-expand-lg navbar-dark bg-success">
    <div class="container">
      <a class="navbar-brand fw-bold d-flex align-items-center" href="{{ path('app_home') }}">
        <img src="{{ asset('logo.svg') }}" alt="MyGreenIT" width="28" height="28" class="me-2">
        MyGreenIT
      </a>

      <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#mainNav"
              aria-controls="mainNav" aria-expanded="false" aria-label="Basculer la navigation">
        <span class="navbar-toggler-icon"></span>
      </button>

      <div class="collapse navbar-collapse" id="mainNav">
        <ul class="navbar-nav ms-auto align-items-lg-center">
          <li class="nav-item">
            <a class="nav-link" href="{{ path('app_home') }}">
              <i class="bi bi-lightning-charge"></i> Action du jour
            </a>
          </li>

          {# Commente si tu n'as pas encore app_dashboard #}
          <li class="nav-item">
            <a class="nav-link" href="{{ path('app_dashboard') }}">
              <i class="bi bi-speedometer2"></i> Dashboard
            </a>
          </li>

          {% if is_granted('ROLE_ADMIN') %}
            <li class="nav-item">
              <a class="nav-link" href="{{ path('admin_action_index') }}">
                <i class="bi bi-tools"></i> Admin Actions
              </a>
            </li>
          {% endif %}

          {% if app.user %}
            <li class="nav-item">
              <span class="nav-link disabled d-none d-lg-inline">{{ app.user.email }}</span>
            </li>
            <li class="nav-item ms-lg-2 mt-2 mt-lg-0">
              <a class="btn btn-sm btn-outline-light" href="{{ path('app_logout') }}">
                <i class="bi bi-box-arrow-right"></i> DÃ©connexion
              </a>
            </li>
          {% else %}
            <li class="nav-item mt-2 mt-lg-0">
              <a class="nav-link" href="{{ path('app_register') }}">
                <i class="bi bi-person-plus"></i> Inscription
              </a>
            </li>
            <li class="nav-item ms-lg-2 mt-2 mt-lg-0">
              <a class="btn btn-sm btn-light" href="{{ path('app_login') }}">
                <i class="bi bi-box-arrow-in-right"></i> Connexion
              </a>
            </li>
          {% endif %}
        </ul>
      </div>
    </div>
  </nav>

  <main class="py-4">
    <div class="container">
      {% for label, messages in app.flashes %}
        {% for message in messages %}
          <div class="alert alert-{{ label == 'danger' ? 'danger' : (label == 'success' ? 'success' : 'info') }} shadow-sm">
            {{ message }}
          </div>
        {% endfor %}
      {% endfor %}

      {% block body %}{% endblock %}
    </div>
  </main>

  <footer class="border-top py-3 bg-light-subtle">
    <div class="container text-muted small d-flex justify-content-between">
      <span>MyGreenIT</span>
      <span>Symfony {{ constant('Symfony\\Component\\HttpKernel\\Kernel::VERSION') }}</span>
    </div>
  </footer>

  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
  {% block javascripts %}{% endblock %}
</body>
</html>
